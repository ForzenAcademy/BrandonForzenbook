<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/yellowColumnTopGrav">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account_title_text"
                style="@style/materialToolbarTitle"  />

        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/first_name_field"
            style="@style/editTextField"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="@string/create_account_first_name_hint"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/first_name_error"
            style="@style/fieldErrorText"
            android:text="@string/create_account_name_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/last_name_field"
            style="@style/editTextField"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="@string/create_account_last_name_hint"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/last_name_error"
            style="@style/fieldErrorText"
            android:text="@string/create_account_name_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date_field"
            style="@style/editTextField"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="@string/create_account_birth_date_format_hint"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/date_error"
            style="@style/fieldErrorText"
            android:text="@string/create_account_date_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_field"
            style="@style/editTextField"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="@string/core_email_hint"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/email_error"
            style="@style/fieldErrorText"
            android:text="@string/core_email_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/location_field"
            style="@style/editTextField"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:hint="@string/create_account_location_hint"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/location_error"
            style="@style/fieldErrorText"
            android:text="@string/create_account_location_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/create_button"
            style="@style/blackButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textFieldHeight"
            android:background="@drawable/black_button">

            <TextView
                android:id="@+id/button_text"
                style="@style/blackButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account_create_button_text"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progress_spinner"
                style="@style/blackButtonLoadingIndicator"
                android:layout_width="60dp"
                android:layout_height="@dimen/textFieldHeight"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/login_required_fields_error"
            style="@style/fieldErrorText"
            android:text="@string/core_required_fields_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View style="@style/spacer"/>

    </LinearLayout>

</ScrollView>