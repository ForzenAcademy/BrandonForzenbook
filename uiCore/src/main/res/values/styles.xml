<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="field_error_text">
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:textColor">?error_color</item>
        <item name="android:fontFamily">?font_weight_semibold</item>
        <item name="android:textSize">@dimen/label_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="yellow_column_centered">
        <item name="android:background">?tertiary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="hint_text">
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:textColor">?on_tertiary</item>
        <item name="android:fontFamily">?font_weight_semibold</item>
        <item name="android:textSize">@dimen/label_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="black_button">
        <item name="android:layout_marginBottom">@dimen/minimum_touch_target_padding</item>
        <item name="android:layout_marginStart">@dimen/padding_large</item>
        <item name="android:layout_marginEnd">@dimen/padding_large</item>
        <item name="android:layout_marginTop">@dimen/minimum_touch_target_padding</item>
        <item name="android:height">@dimen/minimum_touch_target</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/black_button</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">?font_weight_medium</item>
        <item name="android:textSize">@dimen/body_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?secondary</item>
    </style>

    <style name="edit_text_field">
        <item name="android:layout_marginTop">@dimen/minimum_touch_target_padding</item>
        <item name="android:layout_marginStart">@dimen/padding_large</item>
        <item name="android:layout_marginEnd">@dimen/padding_large</item>
        <item name="android:layout_marginBottom">@dimen/minimum_touch_target_padding</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">?on_tertiary</item>
        <item name="android:fontFamily">?font_weight_semibold</item>
        <item name="android:textSize">@dimen/label_medium</item>
        <item name="android:textColorHint">?on_tertiary</item>
        <item name="android:background">?inverse_primary</item>
    </style>

    <style name="redirect_text">
        <item name="android:padding">@dimen/minimum_touch_target_padding</item>
        <item name="fontFamily">?font_weight_semibold</item>
        <item name="android:textSize">@dimen/label_large</item>
        <item name="android:textColor">?on_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="title_image">
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/padding_large</item>
    </style>

    <style name="login_title_text">
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="fontFamily">?font_weight_light</item>
        <item name="android:textColor">?on_secondary</item>
        <item name="android:textSize">@dimen/display_medium</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="alert_dialog">
        <item name="android:height">@dimen/notification_dialog_height</item>
        <item name="android:width">@dimen/notification_dialog_width</item>
        <item name="android:padding">@dimen/notification_dialog_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="alert_dialog_body_text">
        <item name="android:textColor">?on_secondary_container</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_small</item>
        <item name="android:fontFamily">?font_weight_bold</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="alert_dialog_title_text">
        <item name="android:textColor">?on_secondary_container</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/label_small</item>
        <item name="android:fontFamily">?font_weight_semibold</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="alert_dialog_confirmation">
        <item name="android:textColor">?on_surface_variant</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/body_medium</item>
        <item name="android:fontFamily">?font_weight_medium</item>
        <item name="android:padding">@dimen/minimum_touch_target_padding</item>
    </style>

</resources>